<h1>Houses</h1>

<% if @houses = current_user.houses %>
    <% @houses.each do |house| %>
        <li><%= link_to "Show #{house.adress}", house_path(house) %></li>
    <% end %>
    <li><%= link_to "New House", new_house_path  %></li>
<% else %>
    <% @houses.each do |house| %>
    <li><%= link_to "Go on #{house.adress}", house_path(house)  %></li>
    <% end %>
<% end %>
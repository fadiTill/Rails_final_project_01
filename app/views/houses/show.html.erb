<h2> guests infos </h2>


        <p>Total Number of Guests: <%= @house.guests.count %></p>

        <%= render @house.guests %>


        <h2>Add a guests:</h2>
        <%= form_with model: [ @house, @house.guests.build ], local: true do |form| %>
        <p>
            <%= form.label :name %><br>
            <%= form.text_field :name %>
        </p>
        <p>
            <%= form.label :phone_number %><br>
            <%= form.text_field :phone_number%>
        </p>
        <p>
        <%= form.label :adress  %><br>
        <%= form.text_field :adress %>
        </p>
        <p>
        <%= form.label :email  %><br>
        <%= form.text_field :email %>
        </p>
        <p>
        <%= form.label :time_line  %><br>
        <%= form.text_field :time_line %>
        </p>
        <p>
        <%= form.label :comment  %><br>
        <%= form.text_field :comment %>
        </p>
        <p>
        
        <%= form.hidden_field :user_id %>
        </p>
        
        <%= form.hidden_field :house_id %>
        </p>

        <p>
        <%= form.submit %>
       </p>
        <%end%> 

        <%= link_to 'Edit', edit_house_path(@house) %> |
        <%= link_to 'Back', houses_path %>



        

        






